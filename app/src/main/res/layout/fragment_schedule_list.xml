<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg_app_gradient">

    <include android:id="@+id/layoutToolbarSchedule" app:layout_constraintTop_toTopOf="parent" layout="@layout/custom_toolbar_schedule" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_schedules"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:listitem="@layout/fragment_schedule_list_item" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="16dp"
        android:src="@drawable/add"
        app:tint="@color/white" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_remove_confirm"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:text="Remove Schedule"
        android:textColor="@android:color/white"
        android:backgroundTint="#D32F2F"
        android:visibility="gone"
        app:icon="@android:drawable/ic_menu_delete"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconTint="@android:color/white"
        app:cornerRadius="12dp"
        app:elevation="8dp" />

</LinearLayout>