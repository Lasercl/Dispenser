<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    tools:context=".MainActivity">

    <!-- Header -->

    <!-- Card Utama -->

    <ImageView
        android:layout_width="60dp"
        android:layout_height="47dp"
        android:src="@drawable/dispensericon"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="4dp">

    </ImageView>

    <ImageButton
        android:id="@+id/textHome"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/add"
        android:padding="8dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="363dp"
        tools:layout_editor_absoluteY="4dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardDevice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/textHome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Device in Use -->
            <TextView
                android:id="@+id/deviceInUse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Device in Use:"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <!-- Device Name -->
            <TextView
                android:id="@+id/deviceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Device Name: Matt &amp; Laser Machina"
                android:textColor="@android:color/black" />

            <!-- Ilustrasi + Icon Checklist -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="323dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgDevice"
                    android:layout_width="180dp"
                    android:layout_height="156dp"
                    android:contentDescription="Device"
                    android:src="@drawable/dispenser" />

                <ImageView
                    android:id="@+id/imgCheck"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/check"
                />
                <!--                    android:tint="@android:color/holo_green_dark" />-->
            </LinearLayout>

            <!-- Info Panel -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="426dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/holo_orange_light"
                android:orientation="vertical"
                android:padding="12dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:text="Liquid Tank"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />
                <!-- Liquid + Schedule -->

                <!-- Production Preview -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="177dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="2">

                    <!-- Liquid -->

                    <!-- Schedule -->


                    <ImageView
                        android:id="@+id/imgDevice2"
                        android:layout_width="140dp"
                        android:layout_height="148dp"
                        android:contentDescription="Device"
                        android:src="@drawable/beaker" />

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:text="Remaining Liquid: 400 ml"
                        android:textColor="@android:color/black" />


                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:text="Production Reviews"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="177dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="2">

                    <!-- Liquid -->

                    <!-- Schedule -->


                    <ImageView
                        android:id="@+id/imgProduction"
                        android:layout_width="124dp"
                        android:layout_height="82dp"
                        android:contentDescription="Device"
                        android:src="@drawable/production" />

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:text="production completed: 4"
                        android:textColor="@android:color/black" />


                </LinearLayout>

                <TextView
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:text="Variant: Deodorant"
                    android:textColor="@android:color/black" />

            </LinearLayout>
        </LinearLayout>

        </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>