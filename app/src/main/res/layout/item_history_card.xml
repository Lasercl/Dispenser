<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_margin="12dp"
card_view:cardCornerRadius="16dp"
card_view:cardElevation="8dp"
card_view:cardBackgroundColor="#FFFFFF">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtDispenser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dispenser A"
            android:textSize="14sp"
            android:textColor="#666666"/>
        <TextView
            android:id="@+id/txtPowerStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="POWER ON"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="#008B74"
            android:background="#D1FFF7"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/txtVariantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cappuccino Mix"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#222222"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/txtTimeUsed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Durasi: 2 Jam 15 Menit"
        android:textSize="12sp"
        android:textColor="#888888"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        android:layout_marginVertical="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#F0FFFD">
        <TextView
            android:id="@+id/txtNameLiquidA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Liquid A: Espresso"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#00A388"/>
        <TextView
            android:id="@+id/txtVolumeTankA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tank: 50ml | Fill: 50ml"
            android:textSize="13sp"
            android:textColor="#444444"/>
    </LinearLayout>

    <Space android:layout_height="8dp" android:layout_width="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#F0FFFD">
        <TextView
            android:id="@+id/txtNameLiquidB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Liquid B: Fresh Milk"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#00A388"/>
        <TextView
            android:id="@+id/txtVolumeTankB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tank: 50ml | Fill: 50ml"
            android:textSize="13sp"
            android:textColor="#444444"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">
        <TextView
            android:id="@+id/txtCountBottle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Batch: 12 | Total: 450 Bottle"
            android:textSize="11sp"
            android:textColor="#777777"
            android:textStyle="italic" />
        <TextView
            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="14:23 | 20 Nov 2025"
            android:textSize="11sp"
            android:textColor="#999999" />
    </RelativeLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>