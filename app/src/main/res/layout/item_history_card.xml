<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtDispenser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dispenser A"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txtVariant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Variant: Coffe"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/txtVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volume: 50 ml"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/txtCountBottle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bottle Count: 12" />

        <TextView
            android:id="@+id/timeUsed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time Used: 45 menit" />
        <TextView
            android:id="@+id/dispenserVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dispenser Volume: 50 ml"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:23 | 20 Nov 2025"
            android:textSize="12sp"
            android:textColor="#777777"
            android:layout_marginTop="6dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
